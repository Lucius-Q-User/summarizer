{
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "summarizer@lucius.q.user"
        }
    },
    "developer": {
        "name": "Lucius Q. User"
    },
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "manifest_version": 3,
    "name": "Summarizer",
    "permissions": [
        "menus",
        "nativeMessaging",
        "storage"
    ],
    "version": "0.1",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; upgrade-insecure-requests; style-src-attr 'unsafe-inline';"
    }
}
